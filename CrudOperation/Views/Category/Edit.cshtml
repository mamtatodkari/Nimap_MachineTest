@model CrudOperation.Models.viewModel.EditCategoryRequest
<div class="bg-warning bg-opacity-10 py-2">
    <div class="container">
        <h3 class="text-center">Edit Category</h3> 
    </div>

</div> 
<div class="container">
    <form method="post">
    <div class="mb-3">
        <label class="form-label">Category Id</label>
            <input type="text" id="id" class="form-control rounded-pill" asp-for="CategoryId" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Category Name</label>
            <input type="text" id="name" class="form-control rounded-pill" asp-for="CategoryName" />
    </div>
    
        <div class="mb-3">
            <div class="d-flex">
            <button type="submit" class="btn-success">Update</button>
            <button type="submit" class="btn btn-danger ms-4"
              asp-area="" asp-controller="Category" asp-action="Delete">Delete</button>

            </div>
        </div>
    </form>
</div>